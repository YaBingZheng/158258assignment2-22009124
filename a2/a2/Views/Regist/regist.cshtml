@{
    ViewBag.Title = "Regist";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Regist.css">
</head>
<body>
    <div class="container">
        <div class="col-lg-12">
            <h2 class="form_title">Regist</h2>
            <form action="" method="post">
                <p>
                    User Name: <input type="text" class="inputs" name="username" value="" />
                </p>
                <p>
                    Password: <input type="password" class="inputs" name="pwd" value="" />
                </p>
                <p>
                    <input type="submit" class="btn" name="submit" value="Register" />
                </p>
                <p style="color: red;">
                    @ViewBag.error
                </p>
            </form>
        </div>
    </div>
</body>
</html>

